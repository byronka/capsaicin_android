<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
    </style>

    <style name="standardinput" parent="android:style/TextAppearance.Medium">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:ems">10</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/rounded_edittext</item>
    </style>

    <style name="votes_text_appearance">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">@drawable/rounded_votes_box</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">60dp</item>
    </style>


</resources>
